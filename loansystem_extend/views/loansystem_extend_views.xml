        <record id="loan_installment_tree" model="ir.ui.view">
            <field name="name">Loan Installment Inherited</field>
            <field name="model">loan.installment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="loan_installment_form" model="ir.ui.view">
            <field name="name">Loan Installment Inherited</field>
            <field name="model">loan.installment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="loan_installment" string="Loan Installment">
                              <group>
                                  <field name="interest_amount" string="Interest Amount"/>
                                  <field name="emi"/>
                                  <field name="total"/>
                              </group>
                            </page>
                            
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
