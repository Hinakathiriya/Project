<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>   
        <record id="applicant_form" model="ir.ui.view">
            <field name="name">Applicant Apply Inherited</field>
            <field name="model">applicant.apply</field>
            <field name="inherit_id" ref="loansystem.applicant_apply_form"/>
            <field name="arch" type="xml">
                <notebook>
                    <page name="loan_installment" string="Loan Installment">
                        <!-- <field name="interest_rate"/>
                        <field name="emi"/>
                        <field name="total"/> -->
                    </page>
                </notebook>
            </field>
        </record>

        <record id="loan_installment_tree" model="ir.ui.view">
            <field name="name">Loan Installment Inherited</field>
            <field name="model">loan.installment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                </tree>
            </field>
        </record>

        <record id="loan_installment_form" model="ir.ui.view">
            <field name="name">Loan Installment Inherited</field>
            <field name="model">loan.installment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="loan_installment" string="Loan Installment">
                              <group>
                                  <field name="interest_rate" string="Interest Rate"/>
                                  <field name="emi"/>
                                  <field name="total"/>
                              </group>
                            </page>
                            
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
