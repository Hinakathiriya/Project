    <template id="loan_details">
        <div t-call="website.layout">
            <div class="container carousel-inner">
                <div class="carousel-item active d-flex">
                    <t t-foreach="ln" t-as="l">
                        <div class="col-xs-3 col-sm-3 col-md-3 m-3">
                            <div class="card align-items-center" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <t t-esc="l.applicant_name" />
                                    </h5>
                                    <p class="card-text">
                                        Loan Details:
                                        State:
                                        <span t-esc="l.state" />
                                        ,
                                        <!-- Loan Type:
                                        <t t-esc="l.loan_name" />
                                        , -->
                                        Amount:
                                        <span t-esc="l.amount" />
                                        ,
                                        Rate:
                                        <span t-esc="l.rate" />
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </div>
    </template>

    
