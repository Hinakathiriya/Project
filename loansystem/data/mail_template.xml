<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="loan_card_email_template" model="mail.template">
        <field name="name">Loan card: Send by email</field>
        <field name="model_id" ref="loansystem.model_applicant_apply"/>
        <field name="email_from">${(object.partner_id.email_formatted | safe}</field>
        <field name="email_to">${object.email}</field>
        <field name="subject">applicant apply (Ref ${object.ref_seq})</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Dear ${object.applicant_name}
                    <br/><br/>
                    Here your loan appllied confirmation email${object.ref_seq}
                    <br/><br/>
                    Loan Type ${object.loan_type_id}
                    Apply Date ${object.apply_date}
                    Amount ${object.amount}
                    <br/><br/>
                    If you have any quries feel free to ask.
                    <br/>
                </p>
            </div>
        </field>
       <field name="report_template" ref="report_print_loan"/>
       <!-- <field name="reportname">Loan Card${(object.ref_seq)}</field> -->
    </record>
</odoo>
