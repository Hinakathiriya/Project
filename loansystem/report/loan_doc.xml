<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="loan_doc">
        <div class="page">
            <strong>Loan Details </strong>
            <t t-foreach="o.loan_type_id" t-as="loan_type">
                <span class="badge badge-success" t-field="loan_type.loan_name"/>
                <span class="badge badge-success" t-field="loan_type.interest_rate"/>
            </t>            
            <div>
                <table class="table table-sm o_main_table">
                    <tr>
                        <th>Name</th>
                        <th>Amount</th>
                    </tr>
                    <t t-foreach="o.applicant.apply" t-as="applicant">
                        <tr>
                            <td><span t-field="applicant.employee_id"/></td>
                            <td><span t-field="applicant.amount"/></td>
                        </tr>
                    </t>
                </table>
            </div>
        </div>
    </template>
</odoo>